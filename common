#!/bin/sh

alias ..='cd ..'
alias ...='cd ../..'
alias cls='clear'
alias ls='ls --color=auto'
alias ll='ls --color=auto -hl'
alias k='k -h'
alias vi='nvim'
alias python='python3'
alias pip='pip3'
alias gdf='git difftool -t vimdiff'
alias ff='find . -type f -iname'
alias tl1='tree -L 1'
alias tl2='tree -L 2'
alias tl3='tree -L 3'
alias tl4='tree -L 4'
alias makefile='ln -sf ~/workspace/dotfiles/makefile'
alias makefile2='cp ~/workspace/dotfiles/makefile makefile'
alias makefile3='echo include ~/workspace/dotfiles/makefile >> makefile'
alias dos2unixr='find . -type f -print0 | xargs -0 dos2unix'
alias iperf='iperf3'
alias ycm='python ~/.vim/plugged/youcompleteme/install.py --clang-completer'
alias gdc='git diff --cached'
alias gitflow='git flow'
alias cmakefile='ln -sf ~/workspace/dotfiles/CMakeLists.txt'
alias cmakeclean='rm -rf CMakeCache.txt CMakeFiles cmake_install.cmake'

case "$OSTYPE" in
    darwin*)
        export PATH=/opt/homebrew/bin:$PATH
        ;;
    linux*)
        if grep -q -Irin microsoft /proc/version; then
            # WSL
            alias open='explorer.exe'
        else
            # native
            alias open='xdg-open'
        fi
        alias fd=fdfind
        ;;
esac

WORKSPACE=$HOME/workspace
if [ -d $WORKSPACE ]; then cd $WORKSPACE; fi
