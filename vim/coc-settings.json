{
  "inlayHint.enable": true,

  "list": {
    "normalMappings": {
      "<C-c>": "do:exit"
    },
    "insertMappings": {
      "<C-c>": "do:exit"
    }
  },

  "languageserver": {},
  "diagnostic": {
    "enable": true,
    "displayByAle": false
  },
  "python": {
    "pyright.enable": true,
    "formatting": {
      "provider": "autopep8",
      "autopep8Path": "/opt/homebrew/bin/autopep8"
    },
    "linting": {
      "flake8Enabled": true,
      "pylintEnalbed": false
    },
    "analysis": {
      "autoImportCompletions": false
    }
  },
  "xml": {
    "java.home": "/Library/Java/JavaVirtualMachines/jdk-14.jdk/Contents/Home" // "echo $JAVA_HOME" and get this
  }
}
