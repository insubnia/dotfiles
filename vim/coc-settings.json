{
  "list": {
    "normalMappings": {
      "<C-c>": "do:exit"
    },
    "insertMappings": {
      "<C-c>": "do:exit"
    }
  },
  "diagnostic": {
    "enable": true,
    "displayByAle": false
  },
  "languageserver": {
    "clangd.enable": true
  },
  "inlayHint": {
    "enable": true,
    "position": "eol"
  },

  // C/C++
  "clangd": {
    "path": "~/.config/coc/extensions/coc-clangd-data/install/18.1.3/clangd_18.1.3/bin/clangd",
    "enabled": true,
    "formatting.enabled": true
  },

  // Python
  "python": {
    "formatting": {
      "provider": "autopep8",
      "autopep8Path": "/opt/homebrew/bin/autopep8"
    },
    "linting": {
      "enabled": true,
      "flake8Enabled": true,
      "pylintEnalbed": false
    },
    "analysis": {
      "autoImportCompletions": false
    }
  },
  "pyright": {  // https://github.com/fannheyward/coc-pyright
    "enable": true
  },

  // etc
  "json": {
    "format.enable": true,
    "format.keepLines": true,
    "format.indentSize": 2
  },

  "xml": {
    "java.home": "/Library/Java/JavaVirtualMachines/jdk-14.jdk/Contents/Home" // "echo $JAVA_HOME" and get this
  }
}
