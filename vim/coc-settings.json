{
  "inlayHint.enable": true,

  "list": {
    "normalMappings": {
      "<C-c>": "do:exit"
    },
    "insertMappings": {
      "<C-c>": "do:exit"
    }
  },
  "diagnostic": {
    "enable": true,
    "displayByAle": false
  },
  "languageserver": {
    "clangd.enable": true
  },

  "clangd": {
    "enabled": true,
    "formatting.enabled": true
  },

  "pyright": {
    "enable": true,
  },
  "python": {
    "formatting": {
      "provider": "autopep8",
      "autopep8Path": "/opt/homebrew/bin/autopep8"
    },
    "linting": {
      "flake8Enabled": true,
      "pylintEnalbed": false
    },
    "analysis": {
      "autoImportCompletions": false
    }
  },

  "json": {
    "format.enable": true,
    "format.keepLines": true,
    "format.indentSize": 2
  },

  "xml": {
    "java.home": "/Library/Java/JavaVirtualMachines/jdk-14.jdk/Contents/Home" // "echo $JAVA_HOME" and get this
  }
}
